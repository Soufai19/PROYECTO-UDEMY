#include <stdio.h>
#include <stdlib.h>
#include "operaciones.h"
#include "Udemy.h"

int main()
{
  int opcion=0;
  int num=0;
  struct empleado empleados[100];

  num = cargarEmpleados(empleados);

  printf("PROYECTO UDEMY EMPLEADOS\n");
  menu();
  scanf("%d", &opcion);

while(opcion != 7){
        if(opcion == 1){
            int creado = alta(empleados,num);
            if (creado == 1){
                num++;
            }
        }
        else if(opcion == 2){
            int eliminado = baja(empleados,num);
            if (eliminado == 1){
                num--;
            }
        }
        else if(opcion == 3){
            listarEmpleados(empleados,num);
        }
        else if(opcion == 4){
            consultarDatosEmpleado(empleados,num);
        }
        else if(opcion == 5){
            modificarSueldo(empleados,num);
        }
        else if(opcion == 6){
            modificarHoras(empleados,num);
        }
        mostrarMenu();
        scanf("%d",&opcion);
    }
    guardarEmpleados(empleados,num);
    printf("Gracias por usar el sistema de empleados\n");

}
